name:                cicd-shell
version:             1.8.1
homepage:            ssh://git@stash.cirb.lan:7999/cicd/salt-shell.git
license:             BSD3
build-type:          Simple
extra-source-files:  README.adoc
cabal-version:       >=1.10


Data-Files:
    share/*.nix
  , share/completion.sh
  , share/doc/cicd-shell.html
  , share/doc/cicd-shell.pdf

library
  hs-source-dirs:      src
  exposed-modules:     Shell.Type
                       , Shell.Cli
                       , Shell.Config
                       , Shell.PepCmd
                       , Shell.Prelude
  other-modules:       Paths_cicd_shell
                       , Shell.Options
  default-extensions:    FlexibleContexts
                       , LambdaCase
                       , NoImplicitPrelude
                       , OverloadedStrings
                       , StrictData
  build-depends:       base
                       , concurrent-output >= 1.9
                       , dhall >= 1.8
                       , directory >= 1.3
                       , filepath >= 1.4
                       , lens >= 4.15.2
                       , optparse-applicative >= 0.13
                       , raw-strings-qq
                       , transformers >= 0.5
                       , process >= 1.4
                       , protolude >= 0.2
                       , text
  default-language:    Haskell2010
  ghc-options: -Wall -Wno-name-shadowing -Wno-missing-signatures

executable cicd
  hs-source-dirs:      app
  main-is:             Main.hs
  default-extensions:    FlexibleContexts
                       , LambdaCase
                       , NoImplicitPrelude
                       , OverloadedStrings
                       , StrictData
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  build-depends:       base
                       , ascii-progress
                       , async >= 2.1
                       , cicd-shell
                       , directory >= 1.3
                       , lens >= 4.15.2
                       , text
                       , turtle >= 1.3.0
  default-language:    Haskell2010
